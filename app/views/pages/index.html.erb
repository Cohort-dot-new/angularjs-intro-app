<h1>Welcome to Angular</h1>

<div ng-app="app">
  <div ng-controller="stuffCtrl">
    <h3>Reviews</h3>
    <ul>
      <li ng-repeat="review in reviews" ng-if="isPositive(review)">
        <p>{{ review.reviewer}} - {{ review.rating }} stars - {{ review.text }}</p>
        <input ng-model="review.text">
      </li>
    </ul>
    <h3>Add a review</h3>
    <label>Review:</label><input ng-model="newReviewText">
    <label>Rating:</label><input ng-model="newReviewRating">
    <label>Name:</label><input ng-model="newReviewName">
    <button ng-click="addReview(newReviewText, newReviewRating, newReviewName)">Add Review</button>
  </div>
</div>
