<h1>Welcome to Angular</h1>

<div ng-app="app">
  <div ng-controller="stuffCtrl">
    <h3>Reviews</h3>
    <ul>
      <li ng-repeat="review in reviews" ng-if="isPositive(review)">
        <p>{{ review }}</p>
        <input ng-model="review">
      </li>
    </ul>
    <h3>Add a review</h3>
    <input ng-model="newReviewText">
    <button ng-click="addReview(newReviewText)">Add Review</button>
  </div>
</div>
